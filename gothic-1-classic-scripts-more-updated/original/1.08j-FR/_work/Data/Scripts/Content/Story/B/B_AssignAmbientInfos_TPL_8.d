// *************************************************************************

INSTANCE Info_Tpl_8_EinerVonEuchWerden (C_INFO) // E1
{
	nr			= 4;
	condition	= Info_Tpl_8_EinerVonEuchWerden_Condition;
	information	= Info_Tpl_8_EinerVonEuchWerden_Info;
	permanent	= 1;
	description = "Avez-vous besoin d'un autre homme qualifié ?";
};                       

FUNC INT Info_Tpl_8_EinerVonEuchWerden_Condition()
{
	if (Npc_GetTrueGuild(other) != GIL_TPL)
	&& (!C_NpcBelongsToNewCamp (other))
	&& (!C_NpcBelongsToOldCamp (other))
	{
		return TRUE;
	};
};

FUNC VOID Info_Tpl_8_EinerVonEuchWerden_Info()
{
	AI_Output(other,self,"Info_Tpl_8_EinerVonEuchWerden_15_00"); //Avez-vous besoin d'un autre homme qualifié ?
	AI_Output(self,other,"Info_Tpl_8_EinerVonEuchWerden_08_01"); //Nous recherchons toujours des gens biens. Mais tu devra travailler dur pour t'améliorer. Seuls les novices expérimentés peuvent devenir des templiers
	AI_Output(self,other,"Info_Tpl_8_EinerVonEuchWerden_08_02"); //C'est le plus grand honneur que l'on peut faire à un membre de la Confrérie du Dormeur.
};

